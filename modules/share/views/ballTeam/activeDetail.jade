doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1,maximum-scale=1.0,user-scalable=no")
        title='活动详情'
        link(href="/public/css/n_common.css",rel="stylesheet",type="text/css")
        link(href="/public/css/TeamDetail.css",rel="stylesheet",type="text/css")
        link(href="/public/css/ActiveDetail.css",rel="stylesheet",type="text/css")
        script(src="/public/js/jquery-1.7.2.min.js")
        //script(src='/public/vendor/moment/moment.js')
    body
        <!--活动文本 start-->
        div.active_text
            .active_with
                div.active_text_word 活动名称：
                    span=name
                div.active_text_word 活动类型：
                    span
                        case type
                            when 0: = '非赛事'
                            when 1: = '赛事'
                div.active_text_word 活动费用(单价)：
                    span= ensure_money+'元'
                div.active_text_word 活动时间：
                    span= activity_time
                div.active_text_word 活动人数：
                    span= plan_person_num+'人'
                div.active_text_word 活动描述：
                    span= intro
                div.active_text_word 活动地址：
                    span= addr

            <!--活动文本 end-->
            <!--球队成员-->
            div.gk_photo
                img(src="/public/images/join_qiuyuan@2x.png").gk_photo_img
                div.dingwei_more
                    img.zhan_img2(src="/public/images/zhan_img2@2x.png")
                    a(href='#')
                        img.more_img(src='/public/images/more@2x.png')
                div.two_bg
                    div.two_width
                        ul.ad_qiuduiul
                            <!--此处循环li标签，添加头像-->
                            each member in members
                                li
                                    div.ad_touxiang
                                        img(src=member.avatar)
                                    p.ad_touxiang_name.pub_Beyhid=member.nickname
                            div.clear

            a.btn_baoming(href='#')
                img(src='/public/images/btn-sign-up@2x.png')
            div.zhan_foot
            <!--悬浮框二维码 start-->
            div.foot_erweima
            div.erweima_content
                div.erweima_contentl
                    img(src='/public/images/zhaopian.png')
                div.erweima_contentr
                    p 创建你的球队 称霸你的主场
                    p.line_di 一站式球队服务专项平台
                    p.padtop5 长按二维码下载APP
                div.clear
            <!--悬浮框二维码 end-->

    script.

        $(".btn_baoming").click(function () {
            $(this).children("img").attr("src","/public/images/btn-sign-up-pressed@2x.png");
        })
